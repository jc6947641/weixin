<!-- pages/shoplist/shoplist.wxml -->
<view class="shop-list">
  <!-- 遍历展示数据库中的数据 -->
  <block wx:for="{{shopData}}" wx:for-item="item" wx:for-index="index">
    <view class="shop-item">
      <!-- 显示 title 字段 -->
      <text class="shop-title">{{item.title}}</text>

      <!-- 显示 up1 图片 -->
      <image class="shop-image" src="{{item.up1}}"></image>
    </view>
  </block>
</view>