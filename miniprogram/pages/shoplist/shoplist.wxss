/* pages/shoplist/shoplist.wxss */
/*最外层框框*/
.shop{
  display:flex;
  flex-wrap:wrap;
  border-right: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
} 
/*每项（图片文字）占50%，高度200px*/
.shops{
  width: 100%;
  height:200px;
  /*居中对齐*/
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 80rpx;
  /*边框*/
  border-right: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
  box-sizing: border-box;
}
/*图案大小限制*/
.shops image{
  width:100%;
  height:150px;
}
/*字体大小限制*/
.shops text{
  font-size:30px;
}