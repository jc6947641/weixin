/* pages/set/set.wxss */

.right_arrow{
  border:solid black;
  border-width:0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  transform: matrix(-45deg);
  -webkit-transform: rotate(-45deg);

}
  
.item{
  display: flex;
  padding: 20rpx;
  background: white;
  align-items: center;
  justify-content: left;
  border-bottom: 1px solid gainsboro;
  
}

/*去边框*/
.button{
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 0px;
  margin:0px;
  line-height: 1.3;
  font-size: 16px;
}

/*关键去边框*/
.button::after{
  border: none;
  border-radius: 0;
}