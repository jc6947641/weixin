/* pages/home/home.wxss */
.home-background image{
  width: 100%;
  height: 200px;
}

/* 背景图片样式 */
.backimage {
  width: 100%; /* 图片宽度填充轮播图容器 */
  height: 100%; /* 图片高度填充轮播图容器 */
}

/*抹平棱角*/
.four{
  border-radius:60rpx ;
  box-shadow: 0 0 40rpx 10rpx rgba(0,0,0,0.00);/*渲染*/
}

/*最外层框框*/
.Lin{
  display:flex;
  flex-wrap:wrap;
  border-right: 1rpx solid whitesmoke;
  border-bottom: 1rpx solid whitesmoke;
} 
/*每项（图片文字）占50%，高度200px*/
.Lin-item{
  width: 100%;
  height:200px;
  /*居中对齐*/
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 80rpx;
  /*边框*/
  border-right: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
  box-sizing: border-box;

}
/*图案大小限制*/
.Lin-item image{
  width:100%;
  height:150px;
}
/*字体大小限制*/
.Lin-item text{
  font-size:30px;
}

/*动态设置*/
.bg{
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(closest-side,rgba(235,105,78,0.3),rgba(235,105,78,0)),
    radial-gradient(closest-side,rgba(243,11,164,0.3),rgba(243,11,164,0)),
    radial-gradient(closest-side,rgba(254,234,131,0.3),rgba(254,234,131,0)),
    radial-gradient(closest-side,rgba(170,142,245,0.3),rgba(170,142,245,0)),
    radial-gradient(closest-side,rgba(248,192,147,0.3),rgba(248,192,147,0));
  
    background-size: 
      130vmax 130vmax,
      80vmax 80vmax,
      90vmax 90vmax,
      110vmax 110vmax,
      98vmax 98vmax;
    background-position: 
      -80vmax -80vmax,
      60vmax -30vmax,
      10vmax 10vmax,
      -30vmax -10vmax,
      50vmax 30vmax;
    background-repeat: no-repeat;
    animation: 5s movement linear infinite;
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
}

@keyframes movement{

  0%,
  100%{
    background-size: 
      130vmax 130vmax,
      90vmax 90vmax,
      90vmax 90vmax,
      110vmax 110vmax,
      60vmax 90vmax;
    background-position: 
      -30vmax -80vmax,
      50vmax -30vmax,
      10vmax 10vmax,
      -30vmax -10vmax,
      50vmax 50vmax;
  }

  25%{
    background-size: 
      100vmax 100vmax,
      90vmax 90vmax,
      100vmax 100vmax,
      90vmax 90vmax,
      60vmax 60vmax;
    background-position: 
      -60vmax -90vmax,
      50vmax -40vmax,
      0vmax -20vmax,
      -40vmax -20vmax,
      40vmax 60vmax;
  }
  50%{
    background-size: 
      80vmax 80vmax,
      110vmax 110vmax,
      80vmax 80vmax,
      60vmax 60vmax,
      80vmax 80vmax;
    background-position: 
      -50vmax -70vmax,
      40vmax -30vmax,
      10vmax 0vmax,
      20vmax 10vmax,
      30vmax 70vmax;  
  }

  75%{
    background-size: 
      90vmax 90vmax,
      90vmax 90vmax,
      100vmax 100vmax,
      90vmax 90vmax,
      70vmax 70vmax;
    background-position: 
      -50vmax -40vmax,
      50vmax -30vmax,
      20vmax 0vmax,
      -10vmax 10vmax,
      40vmax 60vmax;  
  }

}


.bg::after{
  width: 100%;
  height: 100%;
  content: none;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
}
/*动态背景*/
.wrap{
  width: 100%;
  min-height: 100vh;
}