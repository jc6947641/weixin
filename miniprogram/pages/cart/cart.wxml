<!-- cart.wxml -->

<view>
  <!-- 遍历购物车中的商品项并显示 -->
  <block wx:for="{{ cartItems }}" wx:key="_id">
    <view>
      <text>商品名称：{{ item.name }}</text>
      <text>价格：{{ item.price }}</text>
      <text>数量：{{ item.quantity }}</text>
      <image src="{{ item.image1 }}" style="width: 100px; height: 100px;"></image>
    </view>
  </block>
</view>
