<!--pages/shops/shops.wxml-->
<view class="shops">
  <!-- 遍历展示数据库中的数据 -->
  <block wx:for="{{shopData}}" wx:for-item="item" wx:for-index="index">
    <view class="shops-item">
    
  <!-- 轮播图设置 -->
  <swiper
autoplay="{{true}}"
 circular="{{true}}"
 indicator-dots="{{true}}"
 interval="2000">
	  <swiper-item>
		  <image src="{{item.up1}}" />
	  </swiper-item>
	  <swiper-item>
		  <image src="{{item.up2}}" />
	  </swiper-item>	
  </swiper>
  </view>
  <view>
  <!-- 商品名称 -->
  {{item.title}}
  <!-- 介绍 -->
  <image class="down" src="{{item.down}}"></image>

    </view>
  </block>
</view>