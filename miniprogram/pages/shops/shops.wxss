/* 在您的.wxss文件中添加以下样式 */
/* 默认样式，竖屏时轮播图占据100%宽度 */
.swiper {
  width: 100%;
  height: 300px; /* 设置轮播图容器的高度 */
  border: 1px solid #e0e0e0; /* 添加边框 */
  margin-bottom: 20px; /* 底部留出一些间距 */
}

/* 图片样式 */
.swiper-image {
  width: 100%; /* 图片宽度填充轮播图容器 */
  height: 100%; /* 图片高度填充轮播图容器 */
}

/* 商品信息样式 */
.product-info {
  padding: 20px; /* 添加内边距，增加商品详情的空白间距 */
}

.product-name {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}

.product-description {
  font-size: 14px;
  color: #666;
  margin-top: 5px;
}

.product-price {
  font-size: 20px;
  color: #f00;
  margin-top: 10px;
}

.buy-button {
  background-color: #f00;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  margin-top: 20px;
}

/* 横屏时的样式 */
@media screen and (orientation: landscape) {
  .swiper {
    width: 50%; /* 横屏时轮播图占据50%宽度 */
    float: left; /* 浮动到左边 */
  }

  .product-info {
    width: 50%; /* 横屏时商品信息占据50%宽度 */
  }
}
